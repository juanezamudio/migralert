# MigrAlert Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# Supabase Configuration
# ===================
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (only for server-side operations)
# NEVER expose this to the client
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===================
# Mapbox Configuration
# ===================
# Get your access token from https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token-here

# ===================
# Twilio Configuration (for SMS alerts)
# ===================
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===================
# Application Settings
# ===================
# Base URL for the application (used for generating links in SMS)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Report expiration time in hours
REPORT_EXPIRATION_HOURS=12

# Maximum emergency contacts per user
MAX_EMERGENCY_CONTACTS=5

# ===================
# Optional: Analytics (privacy-respecting)
# ===================
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com
